#!perl -w
use strict;
use warnings;

use lib 'lib';

use Pod::PseudoPod::LaTeX::Perl6book;
use Template;

my $output;

for (@ARGV) {
    my $parser = Pod::PseudoPod::LaTeX::Perl6book->new();
    $parser->codes_in_verbatim(1);
    $parser->output_string( \$output );
    $parser->parse_file($_);
}

my $tt = Template->new({
    INCLUDE_PATH => 'src',
});

$tt->process( 'latex.style', { content => $output } );
